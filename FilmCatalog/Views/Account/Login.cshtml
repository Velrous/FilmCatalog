@model LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid text-center">
    <div class="row">
        <div class="col"></div>
        <div class="col-sm-8 col-md-8 col-lg-6 col-xl-4">
            <h3>Вход</h3>
            <form asp-action="Login" method="post" class="text-center">
                <div class="form-group">
                    <div>
                        <label asp-for="Email" class="font-weight-bold"></label>
                        <input asp-for="Email" class="form-control text-center" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Password" class="font-weight-bold"></label>
                        <input asp-for="Password" class="form-control text-center" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <input class="btn btn-success" type="submit" value="Войти" />
                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />
                }
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
