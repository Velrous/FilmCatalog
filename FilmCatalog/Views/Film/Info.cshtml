@model Film
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid text-center">
            <form>
                <div class="row h-auto">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <a class="btn btn-light btn-outline-dark mr-5 mt-2" href='javascript:history.go(-1)' role="button">Назад</a>
                            </div>
                            <div class="col"></div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col"></div>
                            <div class="col-sm-10 col-md-10 col-lg-8 col-xl-8">
                                <h1>@Model.Title</h1>
                                <img src="~/images/@Model.Image" class="img-fluid w-75 h-auto" asp-append-version="true" />
                            </div>
                            <div class="col"></div>
                        </div>
                    <table class="table">
                        <tr>
                            <th width="25%" scope="col">Год</th>
                            <td>@Model.Year</td>
                        </tr>
                        <tr>
                            <th width="25%" scope="col">Режиссёр</th>
                            <td>@Model.Director</td>
                        </tr>
                    </table>
                    </div>
                    <div class="col"></div>
                </div>
                <div class="row">
                    <div class="col"></div>
                    <div class="col-10 text-center">
                        <div>
                            <h3>Описание:</h3>
                            <label class="text-justify">@Model.Desc</label>
                        </div>
                        @if (Model.UserEmail == User.Identity.Name)
                        {
                            <a class="btn btn-dark btn-outline-light" href="~/Film/Edit/?filmId=@Model.Id" role="button">Редактировать</a>
                        }
                    </div>
                    <div class="col"></div>
                </div>
            </form>
</div>
